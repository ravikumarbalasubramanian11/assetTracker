style.
  table {
        border-collapse: collapse;
        border: 1px solid black;
    }
    th, td {
        padding: 8px;
        text-align: left;
        border: 1px solid black;
    }
    .btn-excel {
        background-color: green;
        color: white;
    }
body
  h3.bg-secondary.py-3.px-2.text-light Asset Tracker
  .container
    .row.py-2
      .col-6
        h3#tableHeading Asset List
      .col-12.my-3
        table#myTable
          thead
            tr
              th Id
              th Asset Name
              th Asset Id
              th Manufacturer
              th Specification
              th Purchase Date
              <th class="admin-only">Action</th>
          tbody
  #complaintModal.modal.fade
    .modal-dialog
        .modal-content
          .modal-header
              h5.modal-title Raise Complaint
              button.close(type='button' data-dismiss='modal') Ã—
          .modal-body
              label(for='complaintSubject') Asset
              input#complaintSubject.form-control(type='text' placeholder='Complaint Subject' readonly)
              label(for='complaintDescription') Complaint Description
              textarea#complaintDescription.form-control(placeholder='Complaint Description')
          .modal-footer
              button#submitComplaint.btn.btn-primary Submit
              button.btn.btn-secondary(type='button' data-dismiss='modal') Cancel

